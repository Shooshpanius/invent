
<div class="modal fade" id="mTerritoryEdit" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="mTerritoryEditLabel">Редактировать территорию</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" role="form" id="territory_edit" name="territory_edit">
            <fieldset>

              <input type="hidden" class="form-control" id="territory_id" name="territory_id" value="<%= @form_data[:territory_edit].id %>">

              <div class="form-group">
                <label for="territory_name" class="col-sm-2 control-label">Наименование</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="territory_name" name="territory_name" placeholder="Наименование" value="<%= @form_data[:territory_edit].name %>">
                </div>
              </div>

              <div class="form-group">
                <label for="territory_address" class="col-sm-2 control-label">Адрес</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="territory_address" name="territory_address" placeholder="Адрес" value="<%= @form_data[:territory_edit].address %>">
                </div>
              </div>
            </fieldset>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success" onclick="territory_edit_save()">Сохранить</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
          </div>
        </form>

      </div>
    </div>
  </div><
</div>