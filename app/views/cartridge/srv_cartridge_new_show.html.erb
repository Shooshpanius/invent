
<div class="modal fade" id="mCartridgeNew" tabindex="-1" role="dialog" aria-labelledby="mCartridgeNew" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="mCartridgeNewLabel">Новый картридж</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" role="form" id="cartridge_new" name="cartridge_new">
            <fieldset>

              <div class="form-group">
                <label for="cartridge_inv_number" class="col-sm-2 control-label">Инв.номер</label>
                <div class="col-sm-3">
                  <input type="text" class="form-control" id="cartridge_inv_number" name="cartridge_inv_number" placeholder="Инв. номер">
                </div>
              </div>

              <div class="form-group">
                <label for="cartridge_model" class="col-sm-2 control-label">Модель</label>
                <div class="col-sm-10">
                  <%= select_tag(:cartridge_models, options_for_select(@form_data[:cartridge_models]) ) %>
                </div>
              </div>

              <div class="form-group">
                <label for="cartridge_room" class="col-sm-2 control-label">Помещение</label>
                <div class="col-sm-10">
                  <%= select_tag(:cartridge_room, options_for_select(@form_data[:rooms]) ) %>
                </div>
              </div>

              <div class="form-group">
                <label for="cartridge_printer" class="col-sm-2 control-label">Принтер</label>
                <div class="col-sm-10">
                  <%= select_tag(:cartridge_printer, options_for_select(@form_data[:printers]) ) %>
                </div>
              </div>

              <div class="form-group">
                <label for="cartridge_comment" class="col-sm-2 control-label">Комментарий</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" id="cartridge_comment" name="cartridge_comment" placeholder="Комментарий">
                </div>
              </div>




            </fieldset>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success" onclick="cartridge_new_save()">Сохранить</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
          </div>
        </form>

      </div>
    </div>
  </div><
</div>