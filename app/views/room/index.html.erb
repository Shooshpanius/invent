<%= stylesheet_link_tag "room" %>
<%= javascript_include_tag "main" %>
<%= javascript_include_tag "room" %>

<div class="panel panel-info">

  <div class="panel-heading">
    <div class="panel-title">
      Кабинеты, помещения
      <a class="btn btn-primary btn-sm pull-right" role="button" data-toggle="modal" data-target="#mRoomNew" onclick="room_new_show()"><span class="glyphicon glyphicon-plus"></span></a>

      <div id="pager" class="pager  pull-right" style="margin:0px; border:0px; padding:0px; width:700px;">
        <form>
          <%= image_tag "first.png", :class => "first" %>
          <%= image_tag "prev.png", :class => "prev" %>
          <input type="text" class="pagedisplay"/>
          <%= image_tag "next.png", :class => "next" %>
          <%= image_tag "last.png", :class => "last" %>
          <select class="pagesize">
            <option selected="selected"  value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
            <option value="200">200</option>
          </select> Rows
        </form>
      </div>

    </div>
    <div class="clearfix"></div>
  </div>

  <div class="panel-body">

    <table class="table table-bordered table-condensed tablesorter" id="tbl_rooms" name="tbl_rooms">
      <thead>

      <tr>
        <th class="first-name col-md-1">#</th>
        <th data-placeholder="" class="filter-match col-md-6">Наименование</th>
        <th data-placeholder="" class="filter-match col-md-4">Территория</th>
        <th data-placeholder="" class="filter-match col-md-1">Действия</th>
      </tr>

      </thead>
      <tbody>
      <% @form_data[:rooms].each.with_index do |room, index| %>
          <tr id="r_<%= room.id %>">
            <td><%= room.id %></td>
            <td><%= room.name %></td>
            <td><%= room.territory.name%></td>
            <td>
              <a href="#" type="button" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-edit"></i></a>
              <a href="#" type="button" class="btn btn-danger btn-xs" onclick="room_delete(<%= room.id %>)"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>

</div>

<div id="room_new_dialog"></div>