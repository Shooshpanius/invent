
<div class="modal fade" id="mRoomEdit" tabindex="-1" role="dialog" aria-labelledby="mRoomEdit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="mRoomEditLabel">Новое помещение, кабинет</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" role="form" id="room_new" name="room_new">
            <fieldset>
              <input type="hidden" class="form-control" id="room_id" name="room_id" value="<%= @form_data[:room_edit].id %>">

              <div class="form-group">
                <label for="room_name" class="col-sm-2 control-label">Наименование</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="room_name" name="room_name" placeholder="Наименование" value="<%= @form_data[:room_edit].territory_id %>">
                </div>
              </div>

              <div class="form-group">
                <label for="room_territory" class="col-sm-2 control-label">Территория</label>
                <div class="col-sm-10">
                  <%= select_tag(:territories, options_for_select(@form_data[:territories], @form_data[:room_edit].territory_id)) %>
                </div>
              </div>
            </fieldset>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success" onclick="room_new_save()">Сохранить</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
          </div>
        </form>

      </div>
    </div>
  </div><
</div>