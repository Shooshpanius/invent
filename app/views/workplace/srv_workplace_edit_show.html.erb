
<div class="modal fade" id="mWorkplaceEdit" tabindex="-1" role="dialog" aria-labelledby="mWorkplaceEdit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="mWorkplaceEditLabel">Новое рабочее место, размещение</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" role="form" id="workplace_edit" name="workplace_edit">
            <fieldset>

              <input type="hidden" class="form-control" id="workplace_id" name="workplace_id" value="<%= @form_data[:workplace_edit].id %>">

              <div class="form-group">
                <label for="workplace_name" class="col-sm-2 control-label">Наименование</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="workplace_name" name="workplace_name" placeholder="Наименование" value="<%= @form_data[:workplace_edit].name %>">
                </div>
              </div>

              <div class="form-group">
                <label for="workplace_room" class="col-sm-2 control-label">Помещение, кабинет</label>
                <div class="col-sm-10">
                  <%= select_tag(:rooms, options_for_select(@form_data[:rooms], @form_data[:workplace_edit].room_id) ) %>
                </div>
              </div>
            </fieldset>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success" onclick="workplace_new_save()">Сохранить</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
          </div>
        </form>

      </div>
    </div>
  </div><
</div>